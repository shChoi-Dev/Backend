<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="nameService" class="di_01.com.di.spring_di_xml_setter.NameService" />
	
	<bean id="nameController" class="di_01.com.di.spring_di_xml_setter.NameController">
		<!-- setter 기반 : 참조 클래스 설정
			name="nameService" => setNameService()
		 -->
		<property name="nameService" ref="nameService" />
	</bean>

</beans>
